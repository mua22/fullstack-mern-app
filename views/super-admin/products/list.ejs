<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>All Products</h2>
    <a href="/super-admin/products/create" class="btn btn-primary">
      <i class="bi bi-plus-lg"></i> Create New Product
    </a>
  </div>

  <table class="table table-bordered table-striped">
    <thead class="table-dark">
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Department</th>
        <th>Color</th>
        <th>Price</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% products.forEach(product => { %>
        <tr>
          <td>
            <% if (product.image) { %>
              <img src="/images/uploaded/<%= product.image %>" alt="<%= product.name %>" width="60">
            <% } else { %>
              N/A
            <% } %>
          </td>
          <td><%= product.name %></td>
          <td><%= product.department %></td>
          <td><%= product.color %></td>
          <td>$<%= product.price %></td>
          <td><%= product.description %></td>
          <td>
            <a href="/super-admin/products/edit/<%= product._id %>" class="btn btn-sm btn-warning">Edit</a>
            <a href="/super-admin/products/delete/<%= product._id %>" class="btn btn-sm btn-danger">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
